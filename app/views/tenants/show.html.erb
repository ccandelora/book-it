<%= render @tenant %>

<div id="tenant_bookings">
  <h1>Bookings (<%= @tenant.bookings.count %>)</h1>
  <ul>
    <%= render :partial => 'tenants/booking', :collection => @tenant.bookings %>
  </ul>
</div>

<div id="comments">
  <h1>Comments</h1>
  <%= render @tenant.comments %>
</div>

<%= render :file => 'comments/new' %>

<% content_for :aside do %>
<%= link_to 'New Tenant', new_tenant_path, {:class => 'button'} %>
<% end %>